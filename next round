    #include <stdio.h>
    int main(){
        int n,k;
        scanf("%d %d ",&n,&k);
        int arr[n];
        for(int i =1;i<=n;i++){
            scanf("%d",&arr[i]);
        }
        int count = 0;
        for(int i =1;i<=n;i++){
            if((arr[i] > 0)&&(arr[i]>=arr[k])){
                count++;
            }
        }
        printf("%d",count);
        return 0;
    }
