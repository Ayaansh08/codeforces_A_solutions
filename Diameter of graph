#include <iostream>
#include <cstring>
#include <algorithm>
#include <string.h>
using namespace std;
 
const int N = 110;
int main()
{
    string s;
    int x=0;
    int t;
    cin>>t;
    while(t--)
    {
        cin>>s;
        if(s[1]=='+')x++;
        else x--;
    }   
    cout<<x<<endl;
    return 0;
}
