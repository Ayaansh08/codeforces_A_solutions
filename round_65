import java.util.*;
 
public class Main
{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		while(n>0){
		    String s = sc.next();
		    int x = s.length();
		    if(x<=10){
		        System.out.println(s);
		    }else{
		        String y = String.valueOf(x-2);
		        String result = s.charAt(0)+y+s.charAt(x-1);
		        System.out.println(result);
		    }
		    n--;
		}
		
	}
}
