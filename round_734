#include<bits/stdc++.h>
using namespace std;
#define ll long long
int Coins(ll int a)
{
	if(a%3==0)
	{
		cout<<a/3<<" "<<a/3<<endl;
	}
	else
	if(a%3==1)
	{
		cout<<(a/3)+1<<" "<<a/3<<endl;
	}
	else
	{
		cout<<a/3<<" "<<(a/3)+1<<endl;
	}
	return 0;
}
int main() {
	int t;
	cin>>t;
	while(t--)
	{
		ll int n;
		cin>>n;
		Coins(n);
	}
	return 0;
}
